{
	"name": "starlight-generator",
	"displayName": "StarLight-Generator",
	"description": "An auto generator for https://starlight.yyyyy.tech",
	"version": "0.3.6",
	"icon": "images/logo.png",
	"publisher": "wysaid",
	"repository": {
		"type": "git",
		"url": "https://github.com/wysaid/vscode-starlight-generator"
	},
	"homepage": "https://github.com/wysaid/vscode-starlight-generator",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"ytech",
		"kuaishou",
		"kwai"
	],
	"activationEvents": [
		"onCommand:starlight-generator.lua",
		"onCommand:starlight-generator.cpp",
		"onCommand:starlight-generator.createShaderTemplate",
		"onCommand:starlight-generator.encode",
		"onCommand:starlight-generator.decode",
		"onCommand:starlight-generator.effectHelper"
	],
	"main": "dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "starlight-generator.lua",
				"title": "1. Run StarLight-Generator lua with current file/directory"
			},
			{
				"command": "starlight-generator.cpp",
				"title": "2. Run StarLight-Generator cpp with current file/directory"
			},
			{
				"command": "starlight-generator.createShaderTemplate",
				"title": "3. Create StarLight shader template in current directory"
			},
			{
				"command": "starlight-generator.encode",
				"title": "4. StarLight: encode current file/directory"
			},
			{
				"command": "starlight-generator.decode",
				"title": "5. StarLight: decode current file/directory"
			},
			{
				"command": "starlight-generator.effectHelper",
				"title": "6. StarLight: Effect Helper Options"
			}
		],
		"configuration": {
			"type": "object",
			"title": "StarLight-Generator Configuration",
			"properties": {
				"starlight-generator.binary_path": {
					"type": "string",
					"description": "A path to starlight binrary. (Optional, maybe faster than online service)",
					"scope": "resource"
				},
				"starlight-generator.api_url": {
					"type": "string",
					"default": "https://starlight.yyyyy.tech",
					"description": "An url to starlight service (default: https://starlight.yyyyy.tech)",
					"scope": "resource"
				},
				"starlight-generator.decodedFileSuffix": {
					"type": "string",
					"default": "txt",
					"description": "The suffix which decoded file has",
					"scope": "resource"
				},
				"starlight-generator.encodingURL": {
					"type": "string",
					"default": "https://yyyyy.tech/faceDetect/encode.php",
					"description": "The encoding url",
					"scope": "resource"
				},
				"starlight-generator.showEditorContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Show 'StarLight-Generator' in editor context menu",
					"scope": "resource"
				},
				"starlight-generator.explorerContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Show 'StarLight-Generator' in explorer context menu",
					"scope": "resource"
				}
			}
		},
		"keybindings": [
			{
				"command": "starlight-generator.lua",
				"key": "ctrl+cmd+alt+l",
				"mac": "ctrl+cmd+alt+l"
			},
			{
				"command": "starlight-generator.cpp",
				"key": "ctrl+cmd+alt+c",
				"mac": "ctrl+cmd+alt+c"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "starlight-generator.lua",
					"when": "!inOutput && config.starlight-generator.showEditorContextMenu",
					"group": "1_modification"
				},
				{
					"command": "starlight-generator.cpp",
					"when": "!inOutput && config.starlight-generator.showEditorContextMenu",
					"group": "1_modification"
				}
			],
			"explorer/context": [
				{
					"command": "starlight-generator.lua",
					"when": "config.starlight-generator.explorerContextMenu",
					"group": "1_modification"
				},
				{
					"command": "starlight-generator.cpp",
					"when": "config.starlight-generator.explorerContextMenu",
					"group": "1_modification"
				},
				{
					"command": "starlight-generator.createShaderTemplate",
					"when": "config.starlight-generator.explorerContextMenu",
					"group": "1_modification"
				},
				{
					"command": "starlight-generator.encode",
					"when": "config.starlight-generator.explorerContextMenu",
					"group": "1_modification"
				},
				{
					"command": "starlight-generator.decode",
					"when": "config.starlight-generator.explorerContextMenu",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"vsext": "rm -rf dist && npx tsc && npx vsce package"
	},
	"commands": {
		"file": "echo ${file}",
		"fileDirname": "echo ${fileDirname}"
	},
	"devDependencies": {
		"@types/archiver": "^5.3.1",
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16",
		"@types/vscode": "^1.61.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.0.0",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"archiver": "^5.3.0",
		"extract-zip": "^2.0.1",
		"form-data": "^4.0.0",
		"formstream": "^1.1.1",
		"fs-extra": "^10.0.0",
		"glob": "^7.2.0",
		"urllib": "^2.38.0"
	}
}
